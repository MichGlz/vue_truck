{
    "extends": "@vue/tsconfig/tsconfig.json",
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue",
        "resources/js/app.js"
    ],
    "compilerOptions": {
        "allowJs": false,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["vite/client"],
        "moduleResolution": "node"
    }
}
